<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:RIPD.ViewModels"
             xmlns:models="clr-namespace:RIPD.Models"
             x:Class="RIPD.Pages.NewFoodPage"
             x:DataType="viewmodels:NewFoodVM">
  <Grid RowDefinitions="*,auto">
    <VerticalStackLayout Grid.Row="0">
      <Entry Placeholder="Barcode" Text="{Binding Barcode}"/>
      <Entry Placeholder="Name" Text="{Binding Name}"/>
      <Entry Placeholder="Manufacturer" Text="{Binding Manufacturer}"/>
      <Entry Placeholder="Description" Text="{Binding Description}"/>
      <Entry Placeholder="Image" Text="{Binding Image}"/>
    </VerticalStackLayout>
    <Button Grid.Row="1" Text="Create Food" Command="{Binding CreateNewFoodCommand}"/>
  </Grid>
</ContentPage>