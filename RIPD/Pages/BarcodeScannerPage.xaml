<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:RIPD.Views"
             xmlns:vm="clr-namespace:RIPD.ViewModels"
             xmlns:zxing="clr-namespace:ZXing.Net.Maui.Controls;assembly=ZXing.Net.MAUI.Controls"
             x:Class="RIPD.Pages.BarcodeScannerPage"
             x:DataType="vm:BarcodeScannerZXingVM"
             Title="BarcodeScannerPage">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="50"/>
    </Grid.RowDefinitions>

    <Button Grid.Row="1" Text="{Binding ButtonBarcode}" Command="{Binding GoBackCommand}"/>
    <zxing:CameraBarcodeReaderView 
      x:Name="barcodeReaderZXing"
      Grid.Row="0"
      BarcodesDetected="CameraBarcodeReaderView_BarcodesDetected"
    />
  </Grid>
</ContentPage>