<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:RIPD.ViewModels"
             x:Class="RIPD.Pages.RegisterPage"
             x:DataType="vm:RegisterVM">
  <Grid RowDefinitions="*,auto">
    <Label Grid.Row="0" Text="Register" FontSize="70"/>
    <VerticalStackLayout Grid.Row="1">
      <VerticalStackLayout Margin="0,10">
        <Entry Placeholder="Name" Text="{Binding Name}"/>
        <Entry Placeholder="Display Name" Text="{Binding DisplayName}"/>
        <Entry Placeholder="e-mail" Text="{Binding Email}"/>
        <Entry IsPassword="True" Placeholder="Password" Text="{Binding Password}"/>
      </VerticalStackLayout>
      <Button Text="Register" Command="{Binding RegisterCommand}" IsEnabled="{Binding IsAvailable}"/>
      <Button Text="Log in instead" Command="{Binding NavToLoginPageCommand}"/>
    </VerticalStackLayout>
  </Grid>
</ContentPage>