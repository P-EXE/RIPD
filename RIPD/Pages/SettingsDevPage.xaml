<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:RIPD.ViewModels"
             x:Class="RIPD.Pages.SettingsDevPage"
             x:DataType="viewmodels:SettingsDevVM">
  <VerticalStackLayout>
    <VerticalStackLayout>
      <Label Text="Api Connection:"/>
      <Picker Title="Api Connection"
              ItemsSource="{Binding ApiConnections}"
              ItemDisplayBinding="{Binding Name}"
              SelectedItem="{Binding ApiConnection}"/>
      <Entry Text="{Binding Name}" Placeholder="Name"/>
      <Entry Text="{Binding Protocol}" Placeholder="Protocol (http/https)"/>
      <Entry Text="{Binding Domain}" Placeholder="Domain"/>
      <Entry Text="{Binding Port}" Placeholder="Port"/>
      <Entry Text="{Binding ApiPage}" Placeholder="Api Page"/>
      <Entry Text="{Binding StatusPage}" Placeholder="Status Page"/>
      <Switch IsEnabled="False" IsToggled="{Binding ApiConnection.Active}" />
      <Button Text="Use" Command="{Binding UseApiConnectionCommand}"/>
      <Button Text="Add" Command="{Binding AddApiConnectionCommand}"/>
      <Button Text="Remove" Command="{Binding RemoveApiConnectionCommand}"/>
    </VerticalStackLayout>
  </VerticalStackLayout>
</ContentPage>