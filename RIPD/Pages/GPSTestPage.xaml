<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RIPD.Pages.GPSTestPage"
             Title="GPSTestPage">
  <ScrollView>
    <VerticalStackLayout
        Spacing="25"
        Padding="30,0"
        VerticalOptions="Center">

      <Label x:Name="LocationResult" FontSize="20"/>

      <Button
            x:Name="CounterBtn"
            Text="Start getting location"
            SemanticProperties.Hint="Start getting location"
            Clicked="OnCounterClicked"
            HorizontalOptions="Center" />

      <Button
            x:Name="CounterBtn2"
            Text="Stop getting location"
            SemanticProperties.Hint="Stops getting location"
            Clicked="CounterBtn2_Clicked"
            HorizontalOptions="Center" />

    </VerticalStackLayout>
  </ScrollView>
</ContentPage>