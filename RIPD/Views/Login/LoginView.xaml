<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:RIPD.Views.Login"
             x:Class="RIPD.Views.Login.LoginView">
  <VerticalStackLayout x:DataType="viewmodels:LoginViewModel">
    <Entry Placeholder="Email" Text="{Binding Email}"/>
    <Entry Placeholder="Password" Text="{Binding Password}"/>
    <Label Text="{Binding EmailLabel}"/>
    <Label Text="{Binding PasswordLabel}"/>
  </VerticalStackLayout>
</ContentView>
