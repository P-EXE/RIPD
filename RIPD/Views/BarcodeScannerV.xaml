<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RIPD.Views.BarcodeScannerV"
             xmlns:VM ="clr-namespace:RIPD.ViewModels"
             xmlns:cv="clr-namespace:Camera.MAUI;assembly=Camera.MAUI"
             x:DataType="VM:BarcodeScannerVM">
    <VerticalStackLayout
        Spacing="25"
        Padding="30,0"
        VerticalOptions="Center">


        <cv:CameraView x:Name="cameraView" WidthRequest="400" HeightRequest="300" CamerasLoaded="CamerasLoadedCommand" BarCodeDetectionEnabled="True"
                           BarcodeDetected="BarcodeDetected"/>


    </VerticalStackLayout>
</ContentView>
