<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:RIPDApp.ViewModels"
             x:DataType="vm:FoodDetailsVM"
             x:Class="RIPDApp.Views.FoodDetailsV">
  <Grid RowDefinitions="auto,*">
    
    <VerticalStackLayout Grid.Row="0">
      <Label Text="{Binding Food.Name}" FontSize="Header"/>
      <Label Text="{Binding Food.Manufacturer.UserName}" FontSize="Subtitle"/>
      <Label Text="{Binding Food.Contributer.UserName}" FontSize="Micro"/>
      <Label Text="{Binding Food.Barcode}" FontSize="Micro"/>
      <Label Text="{Binding Food.Description}" FontSize="Body"/>
    </VerticalStackLayout>

    <ScrollView Grid.Row="1" Margin="10">
      <CollectionView ItemsSource="{Binding FoodProperties}">
        <CollectionView.ItemTemplate>
          <DataTemplate x:DataType="{x:Null}">
            <VerticalStackLayout>
              <Label Text="{Binding Name}"
                       FontSize="Caption"/>
              <Entry Text="{Binding Value}"
                       FontSize="Default"/>
            </VerticalStackLayout>
          </DataTemplate>
        </CollectionView.ItemTemplate>
      </CollectionView>
    </ScrollView>

  </Grid>
</ContentView>
