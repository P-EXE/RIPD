<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:RIPDApp.ViewModels"
             xmlns:m="clr-namespace:RIPDShared.Models;assembly=RIPDShared"
             x:Class="RIPDApp.Views.Diary.DiaryWorkoutListV"
             x:DataType="vm:DiaryVM">
  
  <Grid RowDefinitions="auto, auto">

    <Label Grid.Row="0"
         Text="Workouts"/>

    <CollectionView Grid.Row="1"
                  ItemsSource="{Binding WorkoutEntries}">
      <CollectionView.ItemTemplate>
        <DataTemplate x:DataType="m:Workout">
          <Label Text="{Binding Name}"/>
        </DataTemplate>
      </CollectionView.ItemTemplate>
    </CollectionView>

  </Grid>

</ContentView>
