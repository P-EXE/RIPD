<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RIPDApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:RIPDApp"
    xmlns:pages="clr-namespace:RIPDApp.Pages"
    xmlns:views="clr-namespace:RIPDApp.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="RIPD">

  <FlyoutItem Title="Register" FlyoutItemIsVisible="True">
    <Tab Title="Register">
      <ShellContent
        ContentTemplate="{DataTemplate pages:RegisterPage}"
        Route="RegisterPage" />
    </Tab>
    <Tab Title="Log in">
      <ShellContent
        ContentTemplate="{DataTemplate pages:LoginPage}"
        Route="LoginPage" />
    </Tab>
  </FlyoutItem>

  <TabBar>
    <Tab Title="Home">
      <ShellContent
        ContentTemplate="{DataTemplate pages:HomePage}"
        Route="HomePage" />
    </Tab>
    <Tab Title="Feed">
      <ShellContent
        ContentTemplate="{DataTemplate pages:FeedPage}"
        Route="FeedPage" />
    </Tab>
    <Tab Title="Add Food">
      <ShellContent
        ContentTemplate="{DataTemplate pages:AddFoodPage}"
        Route="AddFoodPage" />
    </Tab>
    <Tab Title="Profile">
      <ShellContent
        ContentTemplate="{DataTemplate pages:OwnerProfilePage}"
        Route="OwnerProfilePage" />
    </Tab>
    <Tab Title="Settings">
      <ShellContent
        ContentTemplate="{DataTemplate pages:SettingsPage}"
        Route="MainPage" />
    </Tab>
  </TabBar>

</Shell>
