<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:RIPDApp.ViewModels"
             x:Class="RIPDApp.Pages.SettingsPage"
             x:DataType="viewmodels:SettingsVM">
  <ScrollView>
    <VerticalStackLayout Spacing="10"
                         Margin="10">
      
      <Button Text="Dev Settings"
              Command="{Binding GoToSettingsDevCommand}"/>

      <FlexLayout AlignItems="Center">
        <Label Text="Imperial / Metric"
             FlexLayout.Grow="1"/>
        <Switch IsToggled="{Binding Metric}"/>
      </FlexLayout>
      
      <Button Text="Log Out"
              Command="{Binding LogOutCommand}"/>
      <Button Text="Delete Account"
              Command="{Binding DeleteAccountCommand}"/>

    </VerticalStackLayout>
  </ScrollView>
</ContentPage>