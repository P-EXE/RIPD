<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:RIPDApp.ViewModels"
             x:Class="RIPDApp.Pages.NewFoodPage"
             x:DataType="vm:NewFoodVM">
  <Grid RowDefinitions="*,auto">
    <VerticalStackLayout Grid.Row="0">
      <Entry Placeholder="Barcode" Text="{Binding Barcode}"/>
      <Entry Placeholder="Name" Text="{Binding Name}"/>
      <HorizontalStackLayout>
        <Entry Placeholder="Manufacturer" Text="{Binding Manufacturer.UserName}"/>
        <Button Text="Search" Command="{Binding SearchManufacturerCommand}"/>
      </HorizontalStackLayout>
      <Entry Placeholder="Description" Text="{Binding Description}"/>
      <Entry Placeholder="Image" Text="{Binding Image}"/>
    </VerticalStackLayout>
    <Button Grid.Row="1" Text="Create Food" Command="{Binding CreateNewFoodCommand}"/>
  </Grid>
</ContentPage>