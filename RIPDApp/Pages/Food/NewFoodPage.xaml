<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:RIPDApp.ViewModels"
             x:Class="RIPDApp.Pages.NewFoodPage"
             x:DataType="vm:NewFoodVM">
  <Grid RowDefinitions="*,auto">
    <VerticalStackLayout Grid.Row="0">
      <Entry Placeholder="Barcode" Text="{Binding Food.Barcode}"/>
      <Entry Placeholder="Name" Text="{Binding Food.Name}"/>
      <Button Text="{Binding ManufacturerName}" Command="{Binding SearchManufacturerCommand}"/>
      <Entry Placeholder="Description" Text="{Binding Food.Description}"/>
      <Entry Placeholder="Image" Text="{Binding Food.Image}"/>
    </VerticalStackLayout>
    <Button Grid.Row="1" Text="Create Food" Command="{Binding CreateNewFoodCommand}"/>
  </Grid>
</ContentPage>