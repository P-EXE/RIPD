<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:v="clr-namespace:RIPDApp.Views"
             xmlns:vm="clr-namespace:RIPDApp.ViewModels"
             x:Class="RIPDApp.Pages.DiaryWeekPage"
             x:DataType="vm:DiaryVM">
  <VerticalStackLayout>
    
    <v:BarChartV/>
    
    <CollectionView SelectionMode="Single"
                    ItemsSource="{Binding FoodEntries}"
                    SelectedItem="{Binding SelectedFoodEntry}"
                    SelectionChangedCommand="{Binding ShowFoodDetailsCommand}">
        <CollectionView.ItemTemplate>
          <DataTemplate>
            <SwipeView>
              <v:ListFoodEntryV/>
            </SwipeView>
          </DataTemplate>
        </CollectionView.ItemTemplate>
      </CollectionView>
  </VerticalStackLayout>
</ContentPage>