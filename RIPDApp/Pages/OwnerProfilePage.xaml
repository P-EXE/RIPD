<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:RIPDApp.ViewModels"
             x:Class="RIPDApp.Pages.OwnerProfilePage"
             x:DataType="vm:OwnerProfileVM">
  <Grid RowDefinitions="auto,*">
    <HorizontalStackLayout Grid.Row="0">
      <VerticalStackLayout>
        <Label Text="{Binding Owner.Id}"/>
        <Label Text="{Binding Owner.UserName}"/>
        <Label Text="{Binding Owner.Email}"/>
      </VerticalStackLayout>
    </HorizontalStackLayout>
    <VerticalStackLayout Grid.Row="1">
      <Button Text="Delete Account" Command="{Binding DeleteAccountCommand}"/>
    </VerticalStackLayout>
  </Grid>
</ContentPage>