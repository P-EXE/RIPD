<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:RIPDApp.ViewModels"
             x:Class="RIPDApp.Pages.RunPage"
             x:DataType="vm:RunVM"
             Title="RunPage">

  <VerticalStackLayout>
    <Button Text="Start getting Location" Command="{Binding StartGettingLocationCommand}"/>
    <Button Text="Stop gettting Location" Command="{Binding StopGettingLocationCommand}" WidthRequest="250"/>
    <Label Text="{Binding CurrentLocation}"/>
  </VerticalStackLayout>
</ContentPage>